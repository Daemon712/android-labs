<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="ru.foobarbaz.notebook.activity.NoteActivity">


    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Дата"
            android:id="@+id/dateTextView"
            android:layout_below="@+id/cancelNoteButton"
            android:layout_alignParentStart="true"/>


    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Тема"
            android:id="@+id/titleTextView"
            android:layout_below="@+id/dateTextView"
            android:layout_alignParentStart="true"
            android:layout_marginTop="92dp"/>


    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Текст"
            android:id="@+id/bodyTextView"
            android:layout_marginTop="105dp"
            android:layout_below="@+id/titleTextView"
            android:layout_alignParentStart="true"/>


    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Сохранить"
            android:id="@+id/saveNoteButton"
            android:layout_alignParentTop="true" android:layout_centerHorizontal="true"/>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Удалить"
            android:id="@+id/deleteNoteButton"
            android:layout_alignParentTop="true" android:layout_alignParentEnd="true"/>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Отмена"
            android:id="@+id/cancelNoteButton"
            android:layout_alignParentTop="true" android:layout_alignParentStart="true"/>

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/noteBody"
            android:layout_below="@+id/bodyTextView"
            android:layout_alignParentStart="true"
            android:lines="3"
            android:layout_alignEnd="@+id/deleteNoteButton"
            android:inputType="text"/>

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/noteDate"
            android:inputType="date"
            android:enabled="false"
            android:layout_below="@+id/dateTextView" android:layout_alignParentStart="true"
            android:layout_alignEnd="@+id/noteTitle"/>

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/noteTitle"
            android:layout_below="@+id/titleTextView"
            android:layout_alignParentStart="true"
            android:focusable="true"
            android:inputType="text"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Теги"
        android:id="@+id/textView"
        android:layout_below="@+id/noteBody"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView3"
        android:layout_alignTop="@+id/textView"
        android:layout_alignEnd="@+id/noteBody"
        android:layout_toEndOf="@+id/titleTextView" />

    <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tagListView" android:layout_below="@+id/textView" android:layout_alignParentStart="true"
            android:choiceMode="multipleChoice"/>


</RelativeLayout>

